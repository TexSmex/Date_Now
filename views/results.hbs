<!-- MAIN DYNAMIC CARD CONTAINER -->
<div class="container">
    <div class="row">
        <div class="col-lg-12">

            {{!-- HBars Object Reference --}} {{!--
            <ul>
                {{#each place }}
                <p>Index: {{@index}}:</p>
                <p>Name: {{name}}</p>
                <p>apiId: {{apiId}}</p>
                <p>Address: {{address}}</p>
                <p>Google Rating: {{googleRating}}</p>
                <p>Open: {{open}}</p>
                <p>Pricing: {{pricing}}</p>
                <p>Popularity: {{popularity}}</p>
                <p>Image: {{image}}</p>
                {{/each}}
            </ul> --}} {{#each places}}
            <!-- Card {{@index}} -->

            <div class="card mx-auto hidden" data-set="{{@index}}" data-card="{{@index}}">

                <!-- Image -->

                <img class="card-img-top img-responsive" src="https://maps.googleapis.com/maps/api/streetview?size=340x340&location={{coordinates}}&fov=90&pitch=0&key=AIzaSyAyh5MynIPujqCRbusMEDkp7a_oqGEw5mU"
                    alt="{{name}}">
                <div class="card-body">

                    <!-- Name -->

                    <h5 class="card-title">{{name}}</h5>

                    <!-- Counter Data if applicable  -->

                    <h6 class="card-subtitle mb-2 text-muted">Popularity: {{popularity}}</h6>

                    <!-- Short Description NEEDS TO BE ADDED -->

                    <p class="card-text">{{address}}</p>

                    <!-- STAR RATING  -->
                    <p class="card-text">Distance: {{distance}}

                        <p class="card-text">Rating: {{googleRating}} {{!-- Run a custom HBARS function to populate these stars --}} {{!--
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star checked"></span> --}}
                        </p>

                        <!-- BACK || SELECT || FORWARD BUTTONS  -->

                        <div class="d-flex justify-content-between">

                            <button class="btn switch btn-danger" data-name="-">
                                <span class="fa fa-arrow-left"></span>
                            </button>

                            <div>

                                <!-- ENSURE ALL META-DATA IS ADDED TO 'SELECT' BUTTON -->

                                <button class="btn-lg select btn-success" data-activity-type="restuarant" data-name="{{name}}" data-zipcode="{{zipcode}}"
                                    data-api-type="google" data-api-id="{{apiId}}">
                                    <span class="fa fa-heart fa-spin"></span>
                                </button>

                            </div>

                            <button class="btn switch btn-primary" data-name="+">
                                <span class="fa fa-arrow-right"></span>
                            </button>
                        </div>
                </div>
            </div>

            {{/each}}

        </div>
    </div>
</div>